.posts
  -@posts.each  do |post|
    .post
      %dl.user
        -if post.user_img
          %img{src: post.user_img }
          =post.username
      %dl.content
        =raw post.content
      %dl.options
        %a.momo.btn.btn-warning
          momo 
        =link_to '挑战', pknew_post_path(post.id), class: 'pk btn btn-danger'
        =link_to '评论', post_path(post.id), class: 'comment btn btn-info'
